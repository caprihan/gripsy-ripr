{
  "name": "gripsy-ripr",
  "version": "1.0.0",
  "description": "Research, Iterate, Peer Review â€” Multi-LLM fact-checking for AI-assisted content",
  "author": "Gripsy (gripsy.com.au)",
  
  "thresholds": {
    "publication_score": 9.0,
    "fail_score": 7.0,
    "max_iterations": 3
  },
  
  "models": {
    "orchestrator": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-20250514",
      "thinking": "low"
    },
    "researcher": {
      "provider": "anthropic", 
      "model": "claude-sonnet-4-20250514",
      "thinking": "low"
    },
    "validator_claude": {
      "provider": "anthropic",
      "model": "claude-opus-4-5",
      "thinking": "high"
    }
  },
  
  "external_validators": {
    "chatgpt": {
      "enabled": true,
      "webhook": "YOUR_N8N_URL/webhook/ripr-gpt",
      "timeout_ms": 30000
    },
    "gemini": {
      "enabled": true,
      "webhook": "YOUR_N8N_URL/webhook/ripr-gemini",
      "timeout_ms": 30000
    }
  },
  
  "scoring": {
    "weights": {
      "accuracy": 0.40,
      "freshness": 0.20,
      "completeness": 0.20,
      "relevance": 0.10,
      "clarity": 0.10
    },
    "validator_weights": {
      "claude": 1.0,
      "chatgpt": 1.0,
      "gemini": 1.0
    }
  },
  
  "output": {
    "include_audit_trail": true,
    "include_sources": true,
    "include_iteration_history": true
  },
  
  "ripr_lite": {
    "enabled": true,
    "skip_external_validators": true,
    "skip_iterations": true,
    "verify_dates": true,
    "verify_sources": true,
    "auto_publish": true
  }
}
